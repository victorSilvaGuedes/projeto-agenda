<%- include('includes/head') %> <%- include('includes/navbar') %>

<div class="container" id="container">
  <div class="form-container sign-up">
    <form action="/login/login" method="post">
      <input type="hidden" name="_csrf" value = <%= csrfToken %>>
      <h1>Faça seu login</h1>
      <span>Se já tiver uma conta, faça login abaixo:</span>
      <input type="string" name="email" placeholder="Email" />
      <input type="password" name="password" placeholder="Senha" />
      <button>Entrar</button>
    </form>
  </div>
  <div class="form-container sign-in">
    <form action="/login/register" method="post">
      <input type="hidden" name="_csrf" value = <%= csrfToken %>>
      <h1>Faça seu cadastro</h1>
      <span>Se ainda não tiver uma conta, preencha o formulário abaixo:</span>
      <input type="string" name="name" placeholder="Nome" />
      <input type="string" name="email" placeholder="Email" />
      <input type="password" name="password" placeholder="Senha" />
      <button>Criar conta</button>
    </form>
  </div>
  <div class="toggle-container">
    <div class="toggle">
      <div class="toggle-panel toggle-left">
        <h1>Bem vindo de volta!</h1>
        <p>Entre para acessar sua agenda!</p>
        <p>Caso não tiver uma conta, clique no botão abaixo:</p>
        <button class="hidden" id="login">Criar conta</button>
      </div>
      <div class="toggle-panel toggle-right">
        <h1>Bem vindo a sua agenda!</h1>
        <p>Salve seus contatos em sua agenda particular na web!</p>
        <p>Caso já tiver uma conta, clique no botão abaixo:</p>
        <button class="hidden create-user-button" id="register">Entrar</button>
      </div>
    </div>
  </div>
</div>
<%- include('includes/messages') %>
<%- include('includes/footer') %>
